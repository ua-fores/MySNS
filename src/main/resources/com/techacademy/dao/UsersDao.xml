<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0.3//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.techacademy.dao.UsersDao">
    <select id="findById" resultType="com.techacademy.entity.Users">
        SELECT
            userId,
            userPw,
            userName,
            email,
            iconImg,
            createDate,
            updateDate,
            deleteFlg
        FROM
            Users
        WHERE
            user_id = #{userId}
    </select>

    <select id="findByAll" resultType="com.techacademy.entity.Users">
        SELECT
            *
        FROM
            Users
    </select>

</mapper>